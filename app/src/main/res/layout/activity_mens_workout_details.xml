<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_search_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#454343"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="@dimen/_2ssp"
        app:cardElevation="@dimen/_2ssp"
        app:cardMaxElevation="@dimen/_2ssp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageview"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_220sdp"/>

            <TextView
                android:id="@+id/tv_Workoutname"
                android:fontFamily="@font/graphikregular"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_180sdp"
                android:text="@string/app_name"
                android:textColor="#ffffff"
                android:textSize="@dimen/_17sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </RelativeLayout>




    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cdMensWorkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:backgroundTint="#FFFFFF"
        android:layout_margin="@dimen/_4sdp"
        app:cardBackgroundColor="#fff"
        app:cardMaxElevation="@dimen/_3sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDesc"
                android:layout_marginLeft="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_2ssp"
                android:text="Description"
                android:textColor="#000"
                android:fontFamily="@font/graphiksemibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvtim"
                android:layout_marginRight="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_2ssp"
                android:text="time"
                android:gravity="right"
                android:textColor="#000"
                android:fontFamily="@font/graphiksemibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvWorkoutDesc"
                android:text="Desc"
                android:layout_below="@+id/tvDesc"
                android:fontFamily="@font/graphikregular"
                android:layout_marginLeft="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_3ssp"
                android:layout_marginBottom="@dimen/_8ssp"
                android:layout_marginRight="@dimen/_8ssp"
                android:textColor="#000"
                android:textSize="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/Image_play"
                android:layout_below="@+id/tvWorkoutDesc"
                android:layout_centerInParent="true"
                android:layout_margin="20dp"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:background="@drawable/vid"/>





        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>