<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_search_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        app:cardBackgroundColor="#20ffffff"
        app:cardCornerRadius="@dimen/_1sdp"
        app:cardElevation="@dimen/_3sdp"
        app:cardMaxElevation="@dimen/_3sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgp"
                android:layout_marginTop="@dimen/_10ssp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/ic_profile"/>



            <TextView
                android:id="@+id/tvDitename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_toRightOf="@+id/imgp"
                android:layout_marginTop="@dimen/_15ssp"
                android:fontFamily="@font/graphikregular"
                android:text="Name"
                android:textColor="#fff"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDitename"
                android:layout_toRightOf="@+id/imgp"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/graphikregular"
                android:text="Email"
                android:textColor="#fff"
                android:textSize="@dimen/_12sdp" />




        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>