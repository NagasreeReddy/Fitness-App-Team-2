<LinearLayout android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cdMensWorkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:backgroundTint="#454343"
        android:layout_margin="@dimen/_4sdp"
        app:cardBackgroundColor="#fff"
        app:cardMaxElevation="@dimen/_3sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvWorkoutLevel"
                android:text="Level"
                android:fontFamily="@font/graphikregular"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="#8DB65E"
                android:textSize="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tvWorkoutName"
                android:text="Workout Name"
                android:fontFamily="@font/graphiksemibold"
                android:layout_marginLeft="@dimen/_13sdp"
                android:textColor="#ffffff"
                android:layout_below="@+id/tvWorkoutLevel"
                android:textSize="@dimen/_19sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <TextView
                android:id="@+id/tvFullEquipment"
                android:text="Full Equipment"
                android:fontFamily="@font/graphikregular"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:textColor="#ffffff"
                android:layout_below="@+id/tvWorkoutName"
                android:textSize="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tvStrength"
                android:text="Strength"
                android:fontFamily="@font/graphikregular"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="#ffffff"
                android:layout_below="@+id/tvFullEquipment"
                android:textSize="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tvTotalTime"
                android:text="Total Time"
                android:fontFamily="@font/graphikregular"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textColor="#ffffff"
                android:layout_below="@+id/tvStrength"
                android:textSize="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnTry"
                android:text="Try"
                android:fontFamily="sans-serif-black"
                android:textColor="#000"
                android:background="@drawable/btn_try_workout"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tvStrength"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"/>










        </RelativeLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>