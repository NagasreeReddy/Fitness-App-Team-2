<LinearLayout android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_search_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_margin="@dimen/_4sdp"
        app:cardBackgroundColor="#fff"
        app:cardMaxElevation="@dimen/_3sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvworkouttype"
                android:text="Type"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="#000"
                android:textSize="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvWorkoutLevel"
                android:text="Level"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="#000"
                android:textSize="@dimen/_15sdp"
                android:layout_below="@+id/tvworkouttype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tvWorkoutTime"
                android:text="Workout Time"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="#000"
                android:textSize="@dimen/_15sdp"
                android:layout_below="@+id/tvWorkoutLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <TextView
                android:id="@+id/tvGender"
                android:text="Gender"
                android:textSize="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="#000"
                android:layout_below="@+id/tvWorkoutTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvWorkoutName"
                android:text="Workout Name"
                android:textSize="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="#000"
                android:layout_below="@+id/tvGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tvworkoutDesc"
                android:text="Workout Desc"
                android:textSize="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="#000"
                android:layout_below="@+id/tvWorkoutName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvVlink"
                android:text="Video Link"
                android:textSize="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="#000"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_below="@+id/tvworkoutDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <Button
                android:id="@+id/btnEdit"
                android:text="Edit"
                android:layout_below="@+id/tvVlink"
                android:background="#8BC34A"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="40dp" />


            <Button
                android:id="@+id/btnDelete"
                android:text="Delete"
                android:layout_below="@+id/tvVlink"
                android:background="@color/colorPrimary"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="40dp" />



        </RelativeLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>